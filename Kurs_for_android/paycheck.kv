#:kivy 1.9.0

MainScreen:

<MainScreen>:
    orientation: 'vertical'
    sd: sred_dol_value
    se: sred_eur_value
    pl: plata_value
    ost: ostatak_value
    tro: troskovi_value

    BoxLayout:
        orientation: 'vertical'
        Label:
            id: sred_dol
            text: 'Srednji kurs dolar'
            size: self.texture_size
            padding_x: (root.width)/2
        Label:
            id: sred_dol_value
            text: ' '
            size: self.texture_size
            padding_x: (root.width)/2
        Label:
            id: sred_eur
            text: 'Srednji kurs euro'
            size: self.texture_size
            padding_x: (root.width)/2
        Label:
            id: sred_eur_value
            text: ' '
            size: self.texture_size
            padding_x: (root.width)/2
        Label:
            id: plata
            text: 'Plata'
            size: self.texture_size
            padding_x: (root.width)/2
        Label:
            id: plata_value
            text: ' '
            size: self.texture_size
            padding_x: (root.width)/2
        Label:
            id: troskovi
            text: 'Troskovi'
            size: self.texture_size
            padding_x: (root.width)/2
        Label:
            id: troskovi_value
            text: ' '
            size: self.texture_size
            padding_x: (root.width)/2
        Label:
            id: ostatak
            text: 'Ostatak'
            markup: True
            outline_color: [1,1,1]

            ellipsis_options: {'color':(1,0.5,0.5,1),'underline':True}
            size: self.texture_size
            padding_x: (root.width)/2
        Label:
            id: ostatak_value
            text: ' '
            italic: True
            size: self.texture_size
        Button:
            text: 'do magic'

            background_color: [1,2,2,1]
            on_press: root.search_location()
            size: self.texture_size
            padding_x: (root.width)/2


