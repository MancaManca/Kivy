#:kivy 1.9.0

<CustomPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Hello world'
    Button:
        text: 'Click me to dismiss'
        on_press: root.dismiss()


<Navbar>:
    orientation: 'horizontal'
    size_hint_y: .1

    canvas.before:
        Color:
            rgba: 0, 1, 0, 1
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    Label:
        size_hint_x: .1
        text: 'bla'
    Label:
        #size_hint_x: .1
        size_hint_min_x: 50
        size_hint_max_x: 90
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'xamarintips.png'
    Button:
        size_hint_x: .2
        text: 'pop'
        on_release: app.show_popup()
<MainView>:
    sd: sred_dol_value
    se: sred_eur_value
    pl: plata_value
    ost: ostatak_value
    tro: troskovi_value
